{
	"name": "@nixthedev/regexybot",
	"version": "0.1.7.1",
	"type": "module",
	"dependencies": {
		"@grammyjs/auto-retry": "^2.0.2",
		"@grammyjs/commands": "^1.2.0",
		"@grammyjs/hydrate": "^1.6.0",
		"@grammyjs/runner": "^2.0.3",
		"grammy": "1.39.3"
	},
	"devDependencies": {
		"@bun-security-scanner/osv": "^1.0.0",
		"@eslint/eslintrc": "^3.3.3",
		"@types/bun": "1.3.8",
		"@typescript-eslint/eslint-plugin": "^8.52.0",
		"@typescript-eslint/parser": "^8.52.0",
		"eslint": "^9.39.2",
		"prettier": "^3.7.4",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.52.0"
	},
	"overrides": {
		"@eslint/eslintrc": "3.3.3"
	},
	"scripts": {
		"dev": "bun run --watch index.ts",
		"main": "bun run index.ts",
		"typecheck": "bun --bun tsc --noEmit",
		"lint": "bunx eslint .",
		"fmt": "bunx prettier --write .",
		"fmt:check": "bunx prettier --check .",
		"ltf": "bun lint && bun typecheck && bun fmt && bun test ./tests/*.test.ts",
		"ltf:check": "bun run lint && bun run typecheck && bun run fmt:check"
	}
}
